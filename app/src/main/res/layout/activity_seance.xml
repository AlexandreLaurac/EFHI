<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activites.SeanceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Séance"
        android:textSize="50sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

        <!-- Panneau de situation dans la séance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:orientation="vertical">

                <!-- Préparation -->
                <TextView
                    android:id="@+id/activity_seance_textePreparation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="0dp"
                    android:text="Préparation : Xs"
                    android:textSize="20sp" />

                <!-- Séquences -->
                <TextView
                    android:id="@+id/activity_seance_texteSequence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="0dp"
                    android:text="Séquence"
                    android:textSize="20sp"/>

                <!-- Cycles -->
                <TextView
                    android:id="@+id/activity_seance_texteCycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:text="Cycle"
                    android:textSize="20sp"/>

                <!-- Travail -->
                <TextView
                    android:id="@+id/activity_seance_texteTravail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="80dp"
                    android:text="Travail : X s"
                    android:textSize="20sp"/>

                <!-- Repos -->
                <TextView
                    android:id="@+id/activity_seance_texteRepos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="80dp"
                    android:text="Repos : Y s"
                    android:textSize="20sp"/>

                <!-- Repos long -->
                <TextView
                    android:id="@+id/activity_seance_texteReposLong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:text="Repos long : Z s"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!-- Compteur -->
            <TextView
                android:id="@+id/activity_seance_Compteur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:textSize="50sp"
                android:text="00:00:00" />

            <Button
                android:id="@+id/activity_seance_boutonPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:text="pause"
                android:textSize="20sp"
                android:onClick="onPauseCompteur"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
